package legorobot;

import lejos.nxt.*;
import lejos.robotics.navigation.DifferentialPilot;

public class HelloWorld { 
    public static void main(String[] args) {
        DifferentialPilot pilot = new DifferentialPilot(56.0,170.0,Motor.B,Motor.C);
        LightSensor l1 = new LightSensor(SensorPort.S2);
        LightSensor l2 = new LightSensor(SensorPort.S2);
        while (true) {
            LCD.drawInt(l1.getLightValue(), 4, 0, 0);
            LCD.drawInt(l1.getNormalizedLightValue(), 4, 0, 1);
            LCD.drawInt(l2.getLightValue(), 4, 0, 2);
            LCD.drawInt(l2.getNormalizedLightValue(), 4, 0, 3);
        }
        
    }
}
