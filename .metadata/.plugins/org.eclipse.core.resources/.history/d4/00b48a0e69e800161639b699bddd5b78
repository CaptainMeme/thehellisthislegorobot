package legorobot;

import lejos.nxt.*;
import lejos.robotics.navigation.DifferentialPilot;

public class HelloWorld { 
    public static void main(String[] args) {
        DifferentialPilot pilot = new DifferentialPilot(56.0,170.0,Motor.B,Motor.C);
        LightSensor l1 = new LightSensor(SensorPort.S2);
        LightSensor l2 = new LightSensor(SensorPort.S3);
        l1.setFloodlight(false);
        l2.setFloodlight(false);
        while(true){
        	if(l1.getNormalizedLightValue()-l2.getNormalizedLightValue()>100){
        		pilot.steer(100);
        	
        	} else if(l1.getNormalizedLightValue()-l2.getNormalizedLightValue()<-100){
        		pilot.steer(-100);
        	} else {
        		pilot.forward();
        	}
        }
        
    }
}
